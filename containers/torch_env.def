Bootstrap: docker
From: python:3.14.2

%post
    apt-get update && apt-get install -y python3 python3-pip

    pip install --no-cache-dir \
        torch \
        scikit-learn \
        numpy

%environment
    export LC_ALL=C
    export PATH=/usr/local/bin:$PATH

%runscript
    exec python knn_experiment.py